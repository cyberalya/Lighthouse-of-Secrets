            0%, 100% { transform: translateY(0) rotate(0deg); }
            50% { transform: translateY(-15px) rotate(5deg); }
        }
        .hanyut-anim {
            animation: driftAway 4s forwards;
        }
        @keyframes driftAway {
            to { transform: translateX(100vw) translateY(-100px) scale(0); opacity: 0; }
        }
        .lighthouse-beam {
            position: absolute;
            top: 50px;
            left: 50%;
